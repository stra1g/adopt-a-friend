{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "semi": ["error", "always"],
      "no-var": ["error"],
      "prefer-const": ["warn"],
      "prefer-template": ["warn"],
      "no-extra-semi": ["error"],
      "no-extra-parens": ["error"],
      "no-console": ["off"],
      "import/extensions": {
        "ts": "never"
      }
    }
}
